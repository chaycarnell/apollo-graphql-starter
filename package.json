{
  "name": "apollo-graphql-starter",
  "version": "1.0.0",
  "description": "A starter Apollo GraphQL server setup for new projects",
  "keywords": [],
  "license": "ISC",
  "author": "Chay Carnell",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "lint": "tsc --noEmit && eslint . --ext .ts,.tsx --fix",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky",
    "sort": "npx sort-package-json",
    "start": "node --env-file=.env ./dist/apolloServer.js",
    "start:dev": "tsx watch --env-file=.env ./src/apolloServer.ts"
  },
  "dependencies": {
    "@apollo/server": "4.10.0",
    "@graphql-tools/load-files": "7.0.0",
    "@graphql-tools/schema": "10.0.2",
    "graphql": "16.8.1",
    "uuid": "9.0.1",
    "winston": "3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.10",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^9.0.7",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "5.3.3"
  }
}
